{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "rimraf scripts/**/*.js artifacts"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.1.1",
		"@nomiclabs/hardhat-etherscan": "3.1.0",
		"@nomiclabs/hardhat-waffle": "2.0.6",
		"@types/chai": "4.3.20",
		"@types/dotenv": "8.2.3",
		"@types/mocha": "10.0.10",
		"@typescript-eslint/eslint-plugin": "5.51.0",
		"@typescript-eslint/parser": "5.51.0",
		"bignumber.js": "9.1.2",
		"chai": "4.5.0",
		"dotenv": "16.4.7",
		"eslint": "8.57.1",
		"eslint-config-prettier": "8.10.0",
		"eslint-config-xo": "0.43.1",
		"eslint-config-xo-typescript": "0.55.1",
		"ethereum-waffle": "3.4.4",
		"ethers": "5.6.1",
		"fast-deep-equal": "3.1.3",
		"hardhat": "2.9.9",
		"husky": "7.0.4",
		"js-base64": "3.7.7",
		"mocha": "9.2.2",
		"prettier": "2.8.8",
		"prettier-plugin-solidity": "1.1.3",
		"rimraf": "3.0.2",
		"solhint": "3.3.8",
		"ts-node": "10.9.2",
		"typescript": "4.9.5"
	},
	"dependencies": {
		"@devprotocol/i-s-tokens": "2.1.0",
		"@devprotocol/protocol": "3.4.0",
		"@devprotocol/util-contracts": "3.3.0",
		"@openzeppelin/contracts": "4.3.2",
		"@openzeppelin/contracts-upgradeable": "4.3.2"
	}
}
