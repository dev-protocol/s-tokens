{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "rimraf scripts/**/*.js artifacts"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.0.2",
		"@nomiclabs/hardhat-etherscan": "2.1.8",
		"@nomiclabs/hardhat-waffle": "2.0.1",
		"@types/chai": "4.2.22",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "9.0.0",
		"@typescript-eslint/eslint-plugin": "5.5.0",
		"@typescript-eslint/parser": "5.5.0",
		"chai": "4.3.4",
		"dotenv": "10.0.0",
		"eslint": "8.3.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-config-xo": "0.39.0",
		"eslint-config-xo-typescript": "0.47.1",
		"ethereum-waffle": "3.4.0",
		"ethers": "5.5.1",
		"hardhat": "2.7.0",
		"husky": "7.0.4",
		"js-base64": "3.7.2",
		"mocha": "9.1.3",
		"prettier": "2.5.0",
		"prettier-plugin-solidity": "1.0.0-beta.19",
		"rimraf": "3.0.2",
		"solhint": "3.3.6",
		"ts-node": "10.4.0",
		"typescript": "4.5.2"
	},
	"dependencies": {
		"@devprotocol/i-s-tokens": "^1.5.1",
		"@devprotocol/protocol": "^3.4.0",
		"@devprotocol/util-contracts": "3.3.0",
		"@openzeppelin/contracts": "4.4.0",
		"@openzeppelin/contracts-upgradeable": "^4.3.0",
		"fast-deep-equal": "^3.1.3"
	}
}
